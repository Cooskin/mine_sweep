/* pages/index.wxss */
.index {
  width: 100%;
  height: 100vh;
  display: grid;
  place-content: center;
}
/* 背景图 */
.index .bg {
  width: 100vw;
  height: 100vh;
  position: fixed;
  top: 0;
  left: 0;
}

/* 难度选择界面 */
.index .wrap {
  height: 520rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
  transition: 0.7s;
}
/* 难度选择按钮 */
.index .wrap .btn_item {
  background-color: #8eb8f7;
  color: #fff;
}

/* 扫雷游戏界面 */
.game {
  position: fixed;
  width: 0;
  height: 0;
  left: 0;
  top: 0;
  bottom: 0;
  right: 0;
  border: 1rpx solid #f40;
  margin: auto;
  transition: 0.7s;
  background-color: #ffffff;
}

/* 隐藏扫雷界面 */
.game_wait {
  width: 0;
  height: 0;
  opacity: 0;
}

/* 线上扫雷界面 */
.game_begin {
  width: 100%;
  height: 100%;
  opacity: 1;
}

/* 返回 难度选择界面 */
.btn_back {
  position: absolute;
  top: 0;
  left: 20rpx;
  border-radius: 50%;
  width: 100rpx;
  height: 100rpx;
}

.btn_back .btn_bg {
  width: 100%;
  height: 100%;
}