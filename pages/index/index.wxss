/* pages/index.wxss */
.index {
  width: 100%;
  height: 100vh;
  display: grid;
  place-content: center;
}
/* 背景图 */
.index .bg {
  width: 100vw;
  height: 100vh;
  position: fixed;
  top: 0;
  left: 0;
}

/* 难度选择界面 */
.index .wrap {
  height: 520rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
  transition: 0.7s;
}
/* 难度选择按钮 */
.index .wrap .btn_item {
  background-color: #8eb8f7;
  color: #fff;
}

/* 扫雷游戏界面 */
.game {
  position: fixed;
  width: 0;
  height: 0;
  left: 0;
  top: 0;
  bottom: 0;
  right: 0;
  margin: auto;
  transition: 0.7s;
  background-color: rgba(0,0,0,0.5);
  display: flex;
  /* flex-direction: column; */
  justify-content: center;
}

/* 隐藏扫雷界面 */
.game_wait {
  width: 0;
  height: 0;
  opacity: 0;
}

/* 线上扫雷界面 */
.game_begin {
  width: 100%;
  height: 100%;
  opacity: 1;
}

/* 返回 难度选择界面 */
.btn_back {
  position: absolute;
  top: 0;
  left: 20rpx;
  border-radius: 50%;
  width: 100rpx;
  height: 100rpx;
}

.btn_back .btn_bg {
  width: 100%;
  height: 100%;
}

.game_box {
  width: 100%;
  height: 100%;
  /* border: 1rpx solid white; */
  display: grid;
  place-content: center;
}

/* 时间显示（计时）*/
.time_box {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  color: #ffffff;

}

.game_box .dish {
  display: flex;
  width: 540rpx;
  height: 550rpx;
  flex-wrap: wrap;
  justify-content: space-between;
}

.game_box .dish .item {
  width: 50rpx;
  height: 50rpx;
  border: 1rpx solid #f1f1f1;
  line-height: 50rpx;
  text-align: center;
  background-color: #d06b6b;
  /* margin-left: 1rpx; */
}